pipeline {
    agent any

    tools {
        
        dockerTool 'Docker'
    }
    
    environment {
        MYSQL_ROOT_PASSWORD = 1234
        MYSQL_DATABASE = 'User1'
    }
    
    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build and push MySQL Docker image
                    def customImage = docker.build("my-mysql-image:${env.BUILD_NUMBER}", "-f src/db/Dockerfile .")
                    customImage.push()
                }
            }
        }
    }
}